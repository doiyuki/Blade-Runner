{
	"name": "blade-runner",
	"displayName": "Blade Runner - Run Task When Open",
	"description": "Run build task automatically when open folder",
	"version": "1.0.0",
	"publisher": "yukidoi",
	"engines": {
		"vscode": "^0.10.1"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:.vscode/tasks.json"
	],
	"main": "./out/src/extension",
	"scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
	},
	"devDependencies": {
		"typescript": "^1.6.2",
		"vscode": "0.10.x"
	},
	"icon": "image/BladeRunner-icon-128.png",
	"galleryBanner": {
        "color": "#f4e2c8",
        "theme": "light"
    },
	"bugs": {
		"url": "https://github.com/doiyuki/Blade-Runner/issues"
    },
    "homepage": "https://github.com/doiyuki/Blade-Runner",
    "repository": {
        "type": "git",
        "url": "https://github.com/doiyuki/Blade-Runner.git"
    }
}